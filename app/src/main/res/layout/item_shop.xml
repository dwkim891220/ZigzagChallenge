<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/tv_itemShop_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/defaultSpacing"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_itemShop"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="1"/>
    <ImageView
        android:id="@+id/iv_itemShop"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="@dimen/defaultSpacing"
        android:layout_marginBottom="@dimen/defaultSpacing"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/iv_shopItem"/>
    <TextView
        android:id="@+id/tv_itemShop_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/defaultSpacing"
        android:layout_marginEnd="@dimen/defaultSpacing"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/iv_itemShop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_itemShop_age"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="육육걸즈"/>
    <TextView
        android:id="@+id/tv_itemShop_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/defaultHalfSpacing"
        android:paddingStart="@dimen/defaultHalfSpacing"
        android:paddingEnd="@dimen/defaultHalfSpacing"
        android:background="@drawable/bg_item_shop_age"
        app:layout_constraintLeft_toLeftOf="@id/tv_itemShop_name"
        app:layout_constraintTop_toBottomOf="@id/tv_itemShop_name"
        app:layout_constraintRight_toLeftOf="@id/ll_itemShop_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        tools:text="20대 30대"/>
    <LinearLayout
        android:id="@+id/ll_itemShop_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/defaultSpacing"
        android:layout_marginEnd="@dimen/defaultSpacing"
        android:ellipsize="end"
        android:maxLines="1"
        android:orientation="horizontal"
        app:layout_constraintLeft_toRightOf="@id/tv_itemShop_age"
        app:layout_constraintTop_toTopOf="@id/tv_itemShop_age"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_itemShop_age"
        tools:text="모던시크 심플베이직"/>
</androidx.constraintlayout.widget.ConstraintLayout>